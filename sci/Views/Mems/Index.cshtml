@model PagedList.IPagedList<sci.Models.Mem>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";

}

<h2>Soci</h2>
<style>
    #button {
        margin-top: 3px;
        
        box-shadow: rgb(12, 54, 97) 0px 1px 0px 0px inset;
        background: linear-gradient(rgb(18, 77, 119) 5%, rgb(18, 77, 119) 100%) rgb(18, 77, 119);
        border-radius: 3px;
        border: 1px solid rgb(18, 77, 119);
        display: inline-block;
        cursor: pointer;
        color: rgb(255, 255, 255);
        font-family: "Trebuchet MS";
        font-size: 13px;
        padding: 6px 24px;
        text-decoration: none;
        text-shadow: rgb(21, 70, 130) 0px 1px 0px;
    }
</style>

<table class="table">
    <tr>
        <td colspan="3">
            @using (Html.BeginForm("Index", "Mems"))
            {

              

                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new
           {
               @id = "flexdatalist",
               name = "language22",
               list = "data",
               //data = ANDREBBE SOSTITUITO A LIST, INSERENDO LA LISTA DI TUTTI I NOMI
               multiple = "",
               SelectList = "1",
               MinLengthAttributeAdapter = "1",            
               onchange = "myFunction()",
               

           })
               
                <datalist id="data" >
 
                @foreach (var item in ViewBag.data)
                {
                    if (item.Cognome != null && item.Nome != null && item.Cognome.Length > 2)
                    {
                              <option style="background-color: red;color: red;">
                                  @item.Cognome
                                  @item.Nome                                 
                                  @item.Cod                               
                              </option>
                              }
                      }

                </datalist>
            }
        </td>

            <td>
                @using (Html.BeginForm("Create", "Mems", FormMethod.Get))
            {
                    <input type="submit" id="button" value="Nuovo Socio" />
                    
                }
            </td>
            </tr>

            <tr>
                <th>
                    @Html.ActionLink("Cognome", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    Nome
                </th>
                <th>
                    @Html.ActionLink("Codice", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Cognome != null && item.Nome != null && item.Cognome.Length > 2)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cognome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            
                            @Html.DisplayFor(modelItem => item.Cod)
                           
                        </td>
                        <td>
                            @Html.ActionLink("Dettagli Socio", "Details", new { id = item.Cod })
                        </td>
                    </tr>
                }


            }

        </table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

@section Scripts {

 

    @Scripts.Render("~/bundles/jqueryval")
    
<link href="~/Scripts/jquery.flexdatalist.min.css" rel="stylesheet" type="text/css"/>
<script src="~/Scripts/jquery.flexdatalist.min.js"></script>

<script>

    $('#flexdatalist').flexdatalist({
        selectionRequired: true,
        minLength: 1,
        maxShownResults: 10,
    });
</script>

<script>
    function myFunction() {

        var codice = $('#codp').val();                       
        var annop = 2017;
        windows: location = "../Pags/Edit?codp=" + codice + "&annop=" + annop;
        
    }
</script>       
    
}
